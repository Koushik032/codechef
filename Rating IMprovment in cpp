#include <iostream>
using namespace std;

int main() {
    int t,i;
    cin >> t;
    int x,y,sum=0;
    
    for(i=1;i<=t;i++)
    {
        cin >> x >>y;
        
        sum=x+200;
        if(y>=x && y<=sum)
        {
            cout << "YES" <<endl;
        }
        else 
        {
            cout << "NO" <<endl;
        }
    }
	// your code goes here
	return 0;
}
