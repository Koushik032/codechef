#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define max1 10000
#define pb push_back
#define fi first
#define se second
#define vst() sort(v.begin(),v.end())
#define vec() vector<ll>v
int main(){

    ll t;
    cin>>t;

    while(t--){
      ll n,m;
      cin>>n>>m;
      ll sum=0;
      vec();
      for(ll i=0;i<n;i++){
         ll a;
         cin>>a;
         sum+=a;
      }
      if(sum>m){
         cout<<sum-m<<endl;
      }
      else{
         cout<<0<<endl;
      }

 }
return 0;
}
