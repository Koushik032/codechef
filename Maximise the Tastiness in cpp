#include <iostream>
using namespace std;

int main() {
    int t;
    cin >> t;
    int a,b,c,d;
    for(int i=0;i<t;i++)
    {
        int max1,max2;
        cin >> a >> b >> c >> d;
        if(a>b)
        {
            max1=a;
        }
        else
        {
            max1=b;
        }
        if(c>d)
        {
            max2=c;
        }
        else
        {
            max2=d;
        }
        int sum=max1+max2;
        cout << sum << endl;
    }
	// your code goes here
	return 0;
}
