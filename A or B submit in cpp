#include <iostream>
using namespace std;

int main() {
    int n;
    int a,b;
    cin >> n;
    
    for(int i=0;i<n;i++)
    {
        cin >> a >> b;
        int num1=a;
        int num2=b;
        int sum1=(500-num1*2)+(1000-(num2+num1)*4);
        int sum2=(1000-num2*4)+(500-(num1+num2)*2);
        if(sum1>=sum2)
        {
            cout << sum1<<endl;
        }
        else
        {
            cout << sum2<<endl;
        }
    }
	// your code goes here
	return 0;
}
