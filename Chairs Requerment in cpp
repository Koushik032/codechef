#include <iostream>
using namespace std;

int main() {
    int t;
    int a,b;
    cin >> t;
    for(int i=1;i<=t;i++)
    {
        cin >> a >>b;
        int sum=a-b;
        if(sum>=0)
        {
            cout << sum <<endl;
        }
        else
        {
            cout << "0" <<endl;
        }
    }
	// your code goes here
	return 0;
}
